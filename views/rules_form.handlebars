<h1>{{title}}</h1>

<form method="POST" action="">
  <div class="form-group">
    <label for="name">Name:</label>
    <input class="form-control" id="name" type="text" placeholder="Enter Name" name="name" required="true" value={{rules.name}}>
  </div>
  <div class="form-group">
    <label for="prize">Prize</label>
    <input class="form-control" id="prize" type="prize" name="prize" value="{{rules.prize}}" placeholder="Winner Prize">
    <label for="des">Description</label>
    <input class="form-control" id="des" type="text" name="des" value="{{rules.des}}" placeholder="Enter your description">
   </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
{{#if errors}}
<lable>Errors:</lable>
  <ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
  </ul>
{{/if}}